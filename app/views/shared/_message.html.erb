
<% unless flash.empty? %>
    <script>
        <% flash.each do |key,value| %>
            <% x = key.to_s.gsub('alert','error').gsub('notice','success') %>
            new Noty({
                type: '<%= x %>',
                layout: 'topRight',
                text: '<%= value %>',
                timeout: '3000',
                theme: 'sunset'
            }).show();
        <% end %>
    </script>
<% end %>

