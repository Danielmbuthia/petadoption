<script>
   document.addEventListener('click',function (event) {
       var makeEditableElement = document.getElementById('makeEditable');
          targetElement = event.target;

        do {
            if (targetElement == makeEditableElement) {
                document.getElementById('makeEditable').classList.add('form-controll')
                document.getElementById('makeEditable').contentEditable = true;
            }     
            targetElement = targetElement.parentNode;
        } while (targetElement);  
        document.getElementById('makeEditable').classList.remove('form-controll')
   });
</script>